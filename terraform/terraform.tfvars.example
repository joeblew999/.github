# Terraform Variables Examples for NATS Deployment
# Copy and customize these examples for your deployment

# =============================================================================
# Example 1: Synadia Cloud Deployment
# =============================================================================

# terraform.tfvars for Synadia Cloud
# github_org = "joeblew999"
# deployment_type = "synadia_cloud"
# synadia_account = "your-synadia-account-id"
# synadia_nkey = "your-synadia-nkey"
# synadia_team = "github-automation"
# jetstream_enabled = true
# monitoring_enabled = true
# backup_enabled = true

# =============================================================================
# Example 2: Self-Hosted Single Node
# =============================================================================

# terraform.tfvars for self-hosted single node
# github_org = "joeblew999"
# deployment_type = "self_hosted_single"
# self_hosted_cluster_name = "github-nats"
# kubernetes_namespace = "nats-system"
# jetstream_enabled = true
# jetstream_storage_size = "20Gi"
# jetstream_storage_class = "gp3"
# monitoring_enabled = true
# backup_enabled = true
# resource_requests = {
#   cpu    = "200m"
#   memory = "256Mi"
# }
# resource_limits = {
#   cpu    = "1000m"
#   memory = "1Gi"
# }

# =============================================================================
# Example 3: Self-Hosted Cluster (High Availability)
# =============================================================================

# terraform.tfvars for self-hosted cluster
# github_org = "joeblew999"
# deployment_type = "self_hosted_cluster"
# self_hosted_cluster_name = "github-nats-ha"
# self_hosted_replicas = 3
# kubernetes_namespace = "nats-system"
# jetstream_enabled = true
# jetstream_storage_size = "50Gi"
# jetstream_storage_class = "gp3"
# monitoring_enabled = true
# grafana_enabled = true
# backup_enabled = true
# backup_schedule = "0 2 * * *"  # Daily at 2 AM
# backup_retention_days = 30
# resource_requests = {
#   cpu    = "500m"
#   memory = "512Mi"
# }
# resource_limits = {
#   cpu    = "2000m"
#   memory = "2Gi"
# }

# =============================================================================
